<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Homework04.Views.HomePage"
             BackgroundImage="news.jpg"
             NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Content>
        <StackLayout Spacing="2" Padding="20" VerticalOptions="Center">
            <Frame CornerRadius="15">
                <StackLayout HorizontalOptions="CenterAndExpand" >
                    <Label Text="News Information"
                           FontSize="Large"
                           FontFamily="OpenSans"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" 
                           TextColor="Black"/>

                    <Entry Placeholder="Enter a Country Name"
                           Text="{Binding InputCountry}" />
                    <Button Text="Search" 
                        BorderRadius="20"
                        BackgroundColor="DarkGray"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontFamily="OpenSans"
                        Command="{Binding CommandGetNews}" />

                </StackLayout>
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>